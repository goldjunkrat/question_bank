	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#2f5076",
		"enablePullDownRefresh": true,
		"backgroundColor": "#eaeaea"

	},
	"tabBar": {

		"color": "#000000",
		"selectedColor": "#007AFF",

		"borderStyle": "black",


		"list": [{
				"pagePath": "pages/index/index",
