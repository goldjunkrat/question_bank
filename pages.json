			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "主页",
				"enablePullDownRefresh": false
		
		
			}
		
		},
		{
		    "path" : "pages/question_bank_list/question_bank_list",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "",
		        "enablePullDownRefresh": false
		    }
		    
		},
		{
		    "path" : "pages/wrong_question_answer/wrong_question_answer",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "错题本-答题",
		        "enablePullDownRefresh": false
		    }
		    
		},
		
		{
			"path": "pages/favorite_list/favorite_list",
			"style": {
				"navigationBarTitleText": "收藏夹",
				"enablePullDownRefresh": false
			}
		
